        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weagri"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />


        <activity
            android:name=".Acitivity.TransactionActivity"
            android:exported="false" />
        <activity
            android:name=".Acitivity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Acitivity.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".Acitivity.ProfiledetailsActivity"
            android:exported="false"
