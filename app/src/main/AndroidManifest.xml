            />
        <activity
            android:name=".Acitivity.UpdateProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Acitivity.UpdatebankActivity"
            android:exported="false" />
        <activity
            android:name=".Acitivity.WithdrawalActivity"
            android:exported="false" />
        <activity
            android:name="com.example.weagri.Acitivity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".Acitivity.OtpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            />
        <activity
            android:name="com.example.weagri.Acitivity.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            />

    </application>

</manifest>