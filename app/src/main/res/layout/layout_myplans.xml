<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/primary_color"
    app:strokeWidth="1dp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:padding="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_120sdp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crops : "
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/tvplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crops : Paddy  ( Free )"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/_10sdp"
                    />

            </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Income : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvDailyIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crops : Paddy  ( Free )"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_10sdp"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income  : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvTotalIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crops : Paddy  ( Free )"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_10sdp"
                />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite bonus  : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvInvitebonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crops : Paddy  ( Free )"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_10sdp"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="validity : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvValidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crops : Paddy  ( Free )"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_10sdp"
                />

        </LinearLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActivate"
                app:cornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activate"
                android:textAllCaps="false"
                android:textColor="#353535"
                android:backgroundTint="#8ADDB7"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                />



        </LinearLayout>


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>