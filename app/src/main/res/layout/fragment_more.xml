                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total income"
                                android:textSize="@dimen/_10sdp"
