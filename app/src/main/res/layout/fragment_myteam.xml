<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_14sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MyteamFragment">



    <RelativeLayout
        android:id="@+id/rlInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invite  your friends get  bonus"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            />



        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <RelativeLayout
                android:id="@+id/rlCopy"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/copybg"
                >


                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/ivcopy"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/copy_ic"
                    />


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/tvCopy"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivcopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    />

            </RelativeLayout>
            <Space
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_weight="1"
                android:id="@+id/btnInvite"
                app:cornerRadius="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:backgroundTint="@color/primary_color"
                android:text="Invite"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                />


        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@+id/rlInvite"
        android:id="@+id/tvMyTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Team"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        />



    <RelativeLayout
        android:paddingVertical="@dimen/_10sdp"
        android:layout_below="@+id/tvMyTeam"
        android:background="@drawable/bg_listmyteam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyTeam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/empty" />


    </RelativeLayout>




</RelativeLayout>